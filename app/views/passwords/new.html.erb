<% provide :title, t('.title') %>
<div id="clearance" class="password-reset">
  <p class='ml-3 text-secondary'>
    <%= t(".description") %>
  </p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="form-group">
      <div class="col-md-4">
        <%= form.label :email, class: 'text-secondary' %>
        <%= form.text_field :email, type: 'email', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-4">
        <%= form.submit class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>
</div>
