<%= form_for :session, url: session_path do |form| %>
  <div class="form-group">
    <div class="col-4">
      <%= form.label :email, 'email', class: 'text-secondary' %>
      <%= form.text_field :email, type: 'email', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-4">
      <%= form.label :password, 'password', class: 'text-secondary' %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-4">
      <%= form.submit class: 'btn btn-info' %>
    </div>
  </div>

  <% if Clearance.configuration.allow_sign_up? %>
    <%= link_to t(".sign_up"), sign_up_path, class: 'text-info p-3' %>
  <% end %>
  <%= link_to t(".forgot_password"), new_password_path, class: 'text-info p-3' %>
<% end %>
